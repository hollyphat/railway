<?xml version="1.0" encoding="UTF-8"?>

<!-- config.xml reference: https://build.phonegap.com/docs/config-xml -->
<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "ng.com.onlinemedia.train"
        version   = "1.0.2">

    <name>Train Seat Reservation System</name>

    <description>
        Train Seat Reservation System
    </description>

    <author href="http://onlinemedia.com.ng" email="admin@onlinemedia.com.ng">
        OnlineMedia
    </author>

    <!-- Define the main entry-point to the application -->
    <content src="index.html" />

    <!-- <preference name="DisallowOverscroll"         value="true" /> -->
    <!-- android: MIN SDK version supported on the target device. MAX version is blank by default. -->
    <!-- <preference name="android-minSdkVersion"      value="14" /> -->

    

    

    <!-- Define a specific version of PhoneGap to build into your app. -->
    <!-- <preference name="phonegap-version"       value="cli-6.0.0" /> -->

    <!-- Plugins -->
    <!-- Core plugins -->    
    <!-- <plugin name="cordova-plugin-whitelist" spec="1.2.2" /> -->

    <plugin name="cordova-plugin-vibration"  />
    

    <!-- Define app icon and splashscreen for each platform. -->
    <icon src="img/icon.jpg" />
    
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="^6.2.3" />
    <preference name="AndroidPersistentFileLocation" value="Compatibility" />
    <plugin name="cordova-plugin-whitelist" spec="1.3.2" />
    <plugin name="cordova-plugin-inappbrowser" spec="~3.0.0" />
    <plugin name="cordova-plugin-device" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />    
</widget>
